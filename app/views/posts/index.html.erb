<table class="table table-hover table-bordered table-sm">
  <thead>
  <tr>
    <th>TITLE</th>
    <th>CONTENT</th>
    <th>CREATED AT</th>
    <th>UPDATED AT</th>
    <th>ACTIONS</th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.created_at %></td>
      <td><%= post.updated_at %></td>
      <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-outline-dark' %>
        <%= link_to 'Show', post_path(post), class: 'btn btn-outline-dark' %>
        <%= button_to 'Delete', post_path(post), method: :delete, class: 'btn btn-outline-danger' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

